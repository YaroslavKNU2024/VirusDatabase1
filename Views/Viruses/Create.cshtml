@model VirusDatabaseNew.Virus

@{
    ViewData["Title"] = "Створити";
}
@if (@ViewBag.GroupName == null)
{
    <h1>Створити вірус</h1>
}
else
{
    <h1>Додати вірус групи @ViewBag.GroupName</h1>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@ViewBag.GroupId.GetType().BaseType == typeof(Microsoft.AspNetCore.Mvc.Rendering.MultiSelectList)) {
                <div class="form-group">
                    <label asp-for="GroupId" class="control-label">Група вірусів</label>
                    <select asp-for="GroupId" class ="form-control" asp-items="ViewBag.GroupId"></select>
                </div>
            }
            else {
                <input type="hidden" value="@ViewBag.GroupId" name="GroupId" />            
            }
            <div class="form-group">
                <label asp-for="VirusName" class="control-label"></label>
                <input asp-for="VirusName" class="form-control" />
                <span asp-validation-for="VirusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VirusDateDiscovered" class="control-label"></label>
                <input asp-for="VirusDateDiscovered" class="form-control" />
                <span asp-validation-for="VirusDateDiscovered" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="GroupId" class="control-label"></label>
                <select asp-for="GroupId" class ="form-control" asp-items="ViewBag.GroupId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
