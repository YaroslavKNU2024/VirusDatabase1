@model VirusDatabaseNew.VirusGroup

@{
    ViewData["Title"] = "Створення групи вірусів";
}

<h1>Додати групу вірусів</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupInfo" class="control-label"></label>
                <input asp-for="GroupInfo" class="form-control" />
                <span asp-validation-for="GroupInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDateDiscovered" class="control-label"></label>
                <input asp-for="GroupDateDiscovered" class="form-control" />
                <span asp-validation-for="GroupDateDiscovered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
