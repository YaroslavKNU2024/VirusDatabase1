@model VirusDatabaseNew.Country

@{
    ViewData["Title"] = "Видалення країни";
}

<h1>Видалити @Html.DisplayFor(model => model.CountryName)</h1>

<h3>Ви впевнені, що хочете видалити @Html.DisplayFor(model => model.CountryName) зі списку?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Так" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
